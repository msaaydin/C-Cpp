#ifndef VAKIT_H_
#define VAKIT_H_
using namespace std;
class Vakit {
public:
	int saat, dakika;
		Vakit();
		Vakit(int dakika, int saat){
			this->saat = saat;
			this->dakika = dakika;
		}
		virtual ~Vakit();
		Vakit operator++();  		//prefix
		Vakit operator++(int i);    //postfix

};
Vakit::Vakit(){

}
Vakit::~Vakit(){

}
Vakit Vakit::operator++(){
	dakika++;
	if(dakika == 60){
		dakika = 0;
		saat++;
		if( saat == 24)
			saat = 0;
	}
	return Vakit(dakika, saat);
}


Vakit Vakit::operator++(int i){

	Vakit v(dakika, saat);

	dakika++;
	if(dakika == 60){
		dakika = 0;
		saat++;
		if( saat == 24)
			saat = 0;
	}
	return v;
}

#endif /* VAKIT_H_ */
